<?xml version="1.0" encoding="utf-8"?>
<!-- Configuration for Choir -->
<configuration>
    <globalconf
        its_su_id           = "$station_id"
        drop_own_msgs       = "true"
        stationtype         = "0"
        port_ipc            = "49154"
	itssecurity         = "false"
        start_services      = "true" />

    <services>
         <service name="SpatService" class="fr.yogoko.choir.facilities.spatservice.SpatService"/>
         <service name="CaService" class="fr.yogoko.choir.facilities.caservice.CaServiceImpl"/>
         <service name="V2XAdapter" class="fr.yogoko.choir.facilities.v2xservice.V2XAdapter"/>
         <service name="VehicleDiagnosis" class="fr.yogoko.choir.facilities.stationdiagnostics.BasicDiagnosisHandlerImpl"/>
         <service name="PositionProvider" class="fr.yogoko.choir.facilities.positionmanager.PositionProviderImpl"/>
         <service name="TrafficLight" class="fr.yogoko.choir.facilities.trafficlight.TrafficLightSender"/>
    </services>

	<websocket
		enabled     = "false"
		port        = "8080" />

    <uppertester
        enabled             = "false"
        local_port          = "12345"
        remote_ip           = "10.200.60.84"
        remote_port         = "4001" />

    <facilities
        enableposition = "false"
        enablestationdiagnostics = "true"/>
</configuration> 
